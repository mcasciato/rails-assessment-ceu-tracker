<h1>Hello <%= current_user.name %>!</h1>
<br>
<h3>Your Information:</h3>

<p class="lead">Occupation: <%= @user.occupation %></p>
<p class="lead">Email: <%= @user.email %></p>

<%= link_to "Edit User", edit_user_registration_path(@user), class: 'btn btn-warning' %>

<br><br><br>

<h2>Your CEUs:</h2>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Duration</th>
      <th>Certificate Type</th>
    </tr>
  </thead>
  <tbody>
    <tbody>
      <% current_user.ceus.each do |ceu| %>
      <tr>
        <td>
            <%= ceu.id %>
        </td>
        <td>
            <%= ceu.title %>
        </td>
        <td>
            <%= ceu.date %>
        </td>
        <td>
            <%= ceu.location %>
        </td>
        <td>
            <%= ceu.duration %>
        </td>
        <% end %>
        <td>
           <%= current_user.ceu_certificate.classification %>
        </td>
      </tr>
  </tbody>
</table>
