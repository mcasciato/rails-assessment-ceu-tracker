<div class="container">
  <div class="row">
    <% if current_user.admin? %>
      <h1 class="display-4">Hello, <%= @user.name %>!</h1>
      <p class="lead">*ADMIN*</p>
        <div class="col-xs-6 offset-md-3">
          <%= render 'user_info' %>
        </div>
    <% else %>
      <h1 class="display-4">Hello, <%= current_user.name %>!</h1>
        <div class="col-xs-6 offset-md-3">
          <%= render 'user_info' %>
        </div>
  </div>
  <% end %>
</div>
