<div class="card">
  <div class="card-block">
    <h4 class="card-title">Add a Note:</h4>
    <p class="card-text"><%= form_for @ceu.notes.build do |f| %>
      <%= f.hidden_field :ceu_id %>
      <%= f.text_area :content, size: "50x6" %><p>
    <div class="card-block">
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
