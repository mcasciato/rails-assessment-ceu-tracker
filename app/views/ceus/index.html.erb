<div class="container">
  <div class="row">
    <div class="col-xs-6 offset-md-3">
      <div class="card">
        <h1 class="display-4 card-header childrens-4 text-xs-center">Your CEUs</h1>
        <p class="text-xs-center"><%= link_to "New CEU", new_user_ceu_path(current_user), class: 'btn btn-outline-info' %> | <%= link_to "Show CEUs", user_ceus_path(current_user), class: "show-ceu btn btn-outline-info" %></p>
          <div class="card-block ceuDetails">
            <ul>
            </ul>
          </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
$(function () {
  $("a.show-ceu").on("click", function(e){
    e.preventDefault();
    $.getJSON(this.href).success(function(json) {
      var $ul = $("div.ceuDetails ul")
      var user = <%= current_user.id %>
      $ul.html("")
      json.forEach(function(ceu){
        var commentHtml = "<p class='lead'><a href='/users/" + user + "/ceus/" + ceu.id + "'>" + ceu.title + "</a></p>";
        $ul.append(commentHtml);
      });
    });
  });
});
</script>
