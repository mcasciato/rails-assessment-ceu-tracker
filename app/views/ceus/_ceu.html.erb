<div class="card">
  <div class="card-block">
    <h4 class="display-4"><%= @ceu.title %></h4>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Location: <%= @ceu.location %></li>
    <li class="list-group-item">Date: <%= @ceu.date.strftime("%m/%d/%Y") %></li>
    <li class="list-group-item">Duration: <%= @ceu.duration %> minutes</li>
    <li class="list-group-item">Certificate: <%= @ceu.certificate.classification %></li>
  </ul>
  <div class="card-block">
    <%= link_to "Edit CEU", edit_ceu_path(@ceu), class: 'btn btn-warning' %>
    <%= link_to "Delete CEU", @ceu, method: :delete, class: 'btn btn-danger' %>
    <%= link_to "Back", user_path(current_user), class: 'btn btn-info' %>
  </div>
</div>
