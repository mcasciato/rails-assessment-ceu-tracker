<div class="card">
  <div class="card-block">
    <h4 class="display-4"><%= @ceu.title %></h4>
    <a href="#" class="js-previous" data-prev="<%=@ceu.id%>">Previous</a> |
    <a href="#" class="js-next" data-id="<%=@ceu.id%>">Next</a>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item list-group-item-action ceuLocation">Location: <%= @ceu.location %></li>
    <li class="list-group-item list-group-item-action ceuDate">Date: <%= @ceu.date.strftime("%m/%d/%Y") %></li>
    <li class="list-group-item list-group-item-action ceuDuration">Duration: <%= @ceu.duration %> minutes</li>
    <li class="list-group-item list-group-item-action">Certificate: <%= @ceu.certificate.classification %></li>
  </ul>
  <div class="card-block">
    <%= link_to "Back", :back, class: 'btn btn-outline-info' %>
    <%= link_to "Edit CEU", edit_user_ceu_path, class: 'btn btn-outline-warning' %>
    <%= link_to "Delete CEU", user_ceu_path, method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
    <!-- <button class="btn btn-outline-success" data-toggle="modal" data-target="#myModal">New Note</button> -->
      <!-- <%= render 'notes/form' %> -->
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $('.js-next').on('click', function(event){
    event.preventDefault();
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/ceus" + nextId + ".json", function(data){
      var ceu = data["ceu"];
      $()
    })
  })
</script>
