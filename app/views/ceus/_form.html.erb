<%= form_for @ceu do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>

<div class="field">
  <span class="field"><i class="fa fa-info"></i></span>
  <%= f.text_field :title, placeholder: "CEU Title" %>
</div>
<br>
<div class="field">
  <span class="field"><i class="fa fa-calendar-o"></i></span>
  <%= f.date_field :date %>
</div>
<br>
<div class="field">
  <span class="field"><i class="fa fa-map-marker"></i></span>
  <%= f.text_field :location, placeholder: "Location" %>
</div>
<br>
<div class="field">
  <span class="field"><i class="fa fa-clock-o"></i></span>
  <%= f.number_field :duration, placeholder: "Duration in Minutes" %>
</div>
<br>
<div class="field">
  <span class="field">Certificate Type: <em>(Enter State or National)</em></span>
  <br>
  <%= f.fields_for :certificates, @ceu.certificates.build do |certificate_fields| %>
    <span class="field"><i class="fa fa-trophy"> </i> <%= certificate_fields.text_field :classification %>
  <% end %>
</div>
<br>
<div class="actions">
  <%= f.submit "Create CEU", class: 'btn btn-primary' %>
</div>

<% end %>
