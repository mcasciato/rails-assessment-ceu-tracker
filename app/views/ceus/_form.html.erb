<%= form_for [current_user, @ceu] do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>

<div class="field">
  <span class="field"><i class="fa fa-info fa-fw"></i></span>
  <%= f.text_field :title, placeholder: "CEU Title" %>
</div>
<br>
<div class="field">
  <span class="field"><i class="fa fa-calendar-o fa-fw"></i></span>
  <%= f.date_field :date %>
</div>
<br>
<div class="field">
  <span class="field"><i class="fa fa-map-marker fa-fw"></i></span>
  <%= f.text_field :location, placeholder: "Location" %>
</div>
<br>
<div class="field">
  <span class="field"><i class="fa fa-clock-o fa-fw"></i></span>
  <%= f.number_field :duration, placeholder: "Duration in Minutes" %>
</div>
<br>
<div class="field">
  <span class="field"><i class="fa fa-trophy fa-fw"></i> Certificate Type:</span>
  <%= f.select :certificate, (["State", "National"]) %>
</div>
<br>
<div class="actions">
  <%= f.submit class: 'btn btn-outline-primary' %>
  <%= link_to "Back", :back, class: 'btn btn-outline-info' %>
</div>
<% end %>
<br>
