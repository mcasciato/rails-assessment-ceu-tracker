<div class="container">
  <div class="row">
    <div class="col-xs-6 offset-md-3">
      <%= render 'ceu' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <div class="card">
        <h1 class="card-header display-4 childrens-4 text-xs-center">New Note</h1>
          <%= render 'notes/form' %>
      </div>
    </div>
    <div class="col-xs-6">
      <%= render 'notes/notes' %>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $('.js-next').on('click', function(event){
    event.preventDefault();
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/ceus/" + nextId + ".json", function(data){
      var ceu = data["ceu"];
      var date = new Date(data["date"]);
      var result = (date.getMonth()+1) + '/' +(date.getDate()+1)  + '/' + date.getFullYear();
      $('#ceuTitle').text(data["title"]);
      $('#ceuLocation').text("Location: " + data["location"]);
      $('#ceuDate').text("Date: " + result);
      $('#ceuDuration').text("Duration: " + data["duration"] + " minutes");
      $('#ceuCertificate').text("Certificate: " + data["certificate"]);
      $('.js-next').attr("data-id", data["id"]);
      $('.js-previous').attr("data-prev", data["id"]);
    });
  });
</script>

<script type="text/javascript" charset="utf-8">
  $('.js-previous').on('click', function(event) {
    event.preventDefault();
    var prevId = parseInt($(".js-previous").attr("data-prev")) - 1;
    $.get("/ceus/" + prevId + ".json", function (data) {
      var ceu = data["ceu"];
      var date = new Date(data["date"]);
      var result = (date.getMonth()+1) + '/' +(date.getDate()+1)  + '/' + date.getFullYear();
      $('#ceuTitle').text(data["title"]);
      $('#ceuLocation').text("Location: " + data["location"]);
      $('#ceuDate').text("Date: " + result);
      $('#ceuDuration').text("Duration: " + data["duration"] + " minutes");
      $('#ceuCertificate').text("Certificate: " + data["certificate"]);
      $('.js-previous').attr("data-prev", data["id"]);
      $('.js-next').attr("data-id"), data["id"];
    });
  });
</script>
