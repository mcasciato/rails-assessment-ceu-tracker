<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <span class="field"><i class="fa fa-user fa-fw"></i></span>
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  <br>
  <div class="field">
      <span><i class="fa fa-briefcase fa-fw"></i></span>
      <%= f.select :occupation, options_for_select(["Occupational Therapist (OT)", "Physical Therapist (PT)", "Recreation Therapist (TR)"]) %>
  </div>
  <br>
  <div class="field">
    <span><i class="fa fa-envelope fa-fw"></i></span>
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
  </div>
  <br>
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <span><i class="fa fa-key fa-fw"></i></span>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  </div>
  <br>
  <div class="field">
    <span><i class="fa fa-key fa-fw"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password"%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-outline-primary' %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
