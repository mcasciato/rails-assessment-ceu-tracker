<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <span class="field"><i class="fa fa-user fa-fw"></i></span>
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  <br>
  <% if current_user.admin? %>
    <div class="field">
      <%= f.label :admin %>
      <%= f.check_box :admin %>
    </div>
  <% end %>
  <div class="field">
      <span><i class="fa fa-briefcase fa-fw"></i></span>
      <%= f.select :occupation, options_for_select(["Occupational Therapist (OT)", "Physical Therapist (PT)", "Recreation Therapist (TR)"]) %>
  </div>
  <br>
  <div class="field">
    <span><i class="fa fa-envelope fa-fw"></i></span>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <strong> (Leave blank if you don't want to change it.)</strong><br />
    <span><i class="fa fa-key fa-fw"></i></span>
    <%= f.password_field :password, autocomplete: "off" %><% if @minimum_password_length %> *<em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <span><i class="fa fa-key fa-fw"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :current_password %><strong> (We need your current password to confirm your changes.)</strong> <br />
    <span><i class="fa fa-key fa-fw"></i></span>
    <%= f.password_field :current_password, autocomplete: "off" %><i> *If you signed up via Facebook, you <strong>DO NOT</strong> have to enter your current password.</i>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update User", class: 'btn btn-outline-primary'%>
  </div>
<% end %>
<br>
<h3>Delete my account</h3>

<p>Unhappy? <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-danger' %></p>

<%= link_to "Back", :back, class: 'btn btn-outline-info' %>
